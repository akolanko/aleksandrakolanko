<!DOCTYPE html>
<html>
	<head>
	  <title>aleksandra kolanko</title>
	  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
	  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div class="container">
			<div id="header">
				<h1 class="title"><%= link_to "aleksandra kolanko", root_path %></h1>
				<div id="nav">
					<ul class="menu">
						<li class="menu_item sgl">
							<%= link_to "Clothing", clothing_path %>
						</li>
						<li class="menu_item">
							<%= link_to "Performances", performances_path %>
						</li>
						<li class="menu_item">
							<%= link_to "Installations", installations_path %>
						</li>
						<li class="menu_item">
							<%= link_to '"Advertisements"', advertisements_path %>
						</li>
						<li class="menu_item">
							<%= link_to "Sculpture", sculpture_path %>
						</li>
						<li class="menu_item">
							<%= link_to "About", about_path %>
						</li>
					</ul>
				</div>
			</div>
			<div id ="content">
				<% if flash[:notice] %>
					<div class="flash">
						<%= flash[:notice] %>
					</div>
				<% end %>
				<% if flash[:alert] %>
					<div class="flash">
						<%= flash[:alert] %>
					</div>
				<% end %>
				<%= yield %>
			</div>
			<div id="footer">
				<div class="left">
					<a href= "/">
						<span class="numbers">&copy 2014</span> Aleksandra Kolanko
					</a>
				</div>
				<div class="right">
					<%= link_to "Contact", contact_path %>
				</div>
			</div>
		</div>
		

	</body>
</html>
