<div id="contact_container">

	<%= form_tag("/contact", method: "post") do %>
		<%= label_tag(:name, "Your Name (Required)") %>
		<br>
		<%= text_field_tag(:name) %>
		<br>
		<%= label_tag(:email, "Your Email (Required)") %>
		<br>
		<%= text_field_tag(:email) %>
		<br>
		<%= label_tag(:message, "Your Message") %>
		<br>
		<%= text_area_tag(:message) %>
		<br>
		<%= submit_tag "Submit", :class => "submit", data: {disable_with: "Submitting..."} %>
	<% end %>

</div>
